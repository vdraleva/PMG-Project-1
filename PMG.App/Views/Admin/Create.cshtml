@model MessageCreateBindingModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Create</h1>
<hr class="bg-dark" />
<form method="post" class="w-45 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group w-45">
        <label asp-for="Content" class="font-weight-bold">Announcment Content</label>
        <textarea asp-for="Content" cols="20" rows="5" class="form-control" placeholder="Announcment..."></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" asp-controller="Admin" asp-action="Create" class="btn btn-lg btn-outline-dark">Create</button>
</form>